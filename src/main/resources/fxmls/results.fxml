<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResultsController">
   <children>
      <Label text="Results" />
      <TableView>
        <columns>
            <TableColumn fx:id="nameCL" prefWidth="75.0" resizable="false" text="Name" />
            <TableColumn fx:id="wonderPointsCL" prefWidth="75.0" text="Wonder points" />
            <TableColumn fx:id="catPointsCL" prefWidth="75.0" text="P2" />
            <TableColumn fx:id="laurelPointsCL" prefWidth="75.0" text="P3" />
            <TableColumn fx:id="progressPointsCL" prefWidth="75.0" text="P4" />
            <TableColumn fx:id="totalCL" editable="false" prefWidth="75.0" sortable="false" text="Total" />
        </columns>
      </TableView>
      <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#onMainMenuButtonClick" text="End">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
       <Button fx:id="quitButton" mnemonicParsing="false" onAction="#onQuitButtonClick" text="End">
           <font>
               <Font name="System Bold" size="14.0" />
           </font>
       </Button>
   </children>
</VBox>
